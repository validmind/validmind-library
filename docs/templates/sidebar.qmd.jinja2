website:
  sidebar:
    - text: "ValidMind Library"
      file: reference/validmind.qmd
      contents:
      # Root level functions from validmind.qmd
      {% if module.members.__version__ %}
      - text: "__version__"
        file: reference/validmind.qmd#__version__
      {% endif %}
      {% if documented_items.get('root') %}
      {% for item in documented_items['root'] %}
      - text: "{{ item.text }}"
        file: {{ item.file }}
      {% endfor %}
      {% endif %}

      # All module documentation pages
      - text: "Submodules"
      {% for member in module.members | sort_members %}
      {% if is_public(member, module, full_data, is_root) and member.kind == "module" %}
      - text: "{{ member.name }}"
        file: validmind/{{ member.name }}.qmd
        {% set module_files = qmd_files.get(member.name, []) %}
        {% if module_files %}
        contents:
        {% for file in module_files %}
        - text: "{{ file.split('/')[-1].replace('.qmd', '') }}"
          file: {{ file }}
        {% endfor %}
        {% endif %}
      {% endif %}
      {% endfor %} 