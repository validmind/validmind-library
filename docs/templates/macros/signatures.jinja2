{%- macro render_signature(member) -%}
<!-- signatures.jinja2 -->
::: {.signature}

<span class="kw">
  {%- if member.kind == "class" or member.kind == "alias" -%}class
  {%- elif member.kind == "function" or member.kind == "method" -%}def
  {%- else -%}{{ member.kind }}
  {%- endif -%}
</span>
<span class="name">{{ member.name }}</span>{%- if member.parameters -%}(
  {%- if member.parameters|length == 1 -%}
    <span class="param"><span class="n">{{ member.parameters[0].name }}</span>
    {%- if member.parameters[0].annotation -%}
      <span class="p">:</span><span class="n">{{ member.parameters[0].annotation['name'] if member.parameters[0].annotation is mapping and 'name' in member.parameters[0].annotation else member.parameters[0].annotation }}</span>
    {%- endif -%}
    {%- if member.parameters[0].default is not none -%}
      <span class="o">=</span><span class="kc">{{ member.parameters[0].default }}</span>
    {%- endif -%}
    </span>
  {%- else -%}
    {%- for param in member.parameters -%}
      <span class="param"><span class="n">{{ param.name }}</span>
      {%- if param.annotation -%}
        <span class="p">:</span><span class="n">{{ param.annotation['name'] if param.annotation is mapping and 'name' in param.annotation else param.annotation }}</span>
      {%- endif -%}
      {%- if param.default is not none -%}
        <span class="o"> = </span><span class="kc">{{ param.default }}</span>
      {%- endif -%}
      {%- if not loop.last -%}<span class="muted">,</span>{%- endif -%}
      </span>
    {%- endfor -%}
  {%- endif -%}
){%- else -%}(){%- endif -%}{%- if member.returns -%}
  <span class="p"> â†’ </span><span class="return-annotation">
  {%- set return_name = member.returns['name'] if member.returns is mapping and 'name' in member.returns else member.returns -%}
  <a href="/reference/validmind/vm_models.html#class-{{ return_name|lower }}">{{ return_name }}</a><span class="muted">:</span>
  </span>
{%- endif -%}</span>

:::
{%- endmacro -%}